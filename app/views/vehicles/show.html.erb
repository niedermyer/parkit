<div class="row">
  <div class="col">
    <h1><%= @vehicle.identifier %> </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-3">
    <div id="vehicle-actions" class="action-sidebar">
      <%= link_to 'Edit this Vehicle', edit_vehicle_path(@vehicle), id: 'edit-link', class: 'btn btn-primary action-link' %>
      <%= button_to 'Delete this Vehicle', vehicle_path(@vehicle), method: :delete,
                    data: { confirm: 'Are you sure you want to delete this vehicle?' }, id: 'destroy-link', class: 'btn btn-danger action-link' %>
    </div>
  </div>

  <div class="col-lg-9">
    <table class="table">
      <tbody>
      <tr>
        <th scope="row">License State</th>
        <td><%= @vehicle.license_state %></td>
      </tr>
      <tr>
        <th scope="row">License Number</th>
        <td><%= @vehicle.license_number %></td>
      </tr>
      <tr>
        <th scope="row">Description</th>
        <td><%= @vehicle.description %></td>
      </tr>
      <tr>
        <th scope="row">Contact Name</th>
        <td><%= @vehicle.contact_name %></td>
      </tr>
      <tr>
        <th scope="row">Contact Phone</th>
        <td><%= @vehicle.contact_phone %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
